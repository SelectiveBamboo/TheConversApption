<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Notif_header">

        <SwitchPreferenceCompat
            app:key="switch_allow_notif"
            app:summaryOff="@string/enablingNotification_summary_off"
            app:summaryOn="@string/enablingNotification_summary_on"
            app:title="@string/notif_title" />

        <Preference
            app:key="set_time_notification"
            app:title="Set at which time you want to be notified"
            android:id="@+id/NotificationTimePicker"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Category">

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_US"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_US"
                android:key="multiselect_US_feeds"
                android:title="US feeds to follow" />

        <MultiSelectListPreference
            android:dialogTitle="Sélectionner les catégories à suivre"
            android:entries="@array/settings_multi_select_list_CategoryToFollow_FR"
            android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_FR"
            android:key="multiselect_FR_feeds"
            android:title="Feeds FR à suivre" />

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_AU"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_AU"
                android:key="multiselect_AU_feeds"
                android:title="Australia feeds to follow" />

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_AF"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_AF"
                android:key="multiselect_AF_feeds"
                android:title="Africa feeds to follow" />

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_UK"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_UK"
                android:key="multiselect_UK_feeds"
                android:title="UK feeds to follow" />

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_GP"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_GP"
                android:key="multiselect_GP_feeds"
                android:title="Global Perspective feeds to follow"/>


            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_CA_en"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_CA_en"
                android:key="multiselect_CA_en_feeds"
                android:title="Canada (english) feeds to follow"/>

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_ID"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_ID"
                android:key="multiselect_ID_feeds"
                android:title="Indonesia feeds to follow"/>

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_ES"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_ES"
                android:key="multiselect_ES_feeds"
                android:title="España feeds para seguir"/>

        <MultiSelectListPreference
            android:dialogTitle="Select categories you want to follow"
            android:entries="@array/settings_multi_select_list_CategoryToFollow_CA_fr"
            android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_CA_fr"
            android:key="multiselect_CA_fr_feeds"
            android:title="Feeds du Canada (français) à suivre" />

            <MultiSelectListPreference
                android:dialogTitle="Select categories you want to follow"
                android:entries="@array/settings_multi_select_list_CategoryToFollow_NL"
                android:entryValues="@array/settings_multi_select_list_URL_Values_CategoryToFollow_NL"
                android:key="multiselect_NL_feeds"
                android:title="New Zealand feeds to follow"/>
        </PreferenceCategory>

</PreferenceScreen>
