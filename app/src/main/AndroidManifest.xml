<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.smb.univ.iut.acy.rt2.daroldj.theconversapption">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".scheduleNotifService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE"/>

        <activity android:name=".SettingsActivity" />

        <service
            android:name=".RSSTheConvNotif"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE"/>

        <receiver
            android:name=".createNotifReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".bootReceiverNotif"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />

                <!-- <data -->
                <!-- android:host="theconversationfrance.cmail19.com" -->
                <!-- android:scheme="https" /> -->


                <!-- <category android:name="android.intent.category.DEFAULT" /> -->
                <!-- &lt;!&ndash; The BROWSABLE category is required to get links from web pages. &ndash;&gt; -->
                <!-- <category android:name="android.intent.category.BROWSABLE" /> -->
            </intent-filter>
        </activity>
    </application>

</manifest>